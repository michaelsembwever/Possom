<html>
    <head>
        <meta name="decorator" content="maindecorator">
    </head>

    <body>
        <h1>Pictures</h1>

        <content tag="picture-results">
            #set ($baseURL = "?c=p&amp;q=$result.getQuery()")

            #if ($result.getTotalDocumentsAvailable() > 0)
                ##$result.totalDocumentsAvailable hits

                <table id="pic_result" cellspacing="10px" cellpadding="0">
                    <tr>
                        <td colspan="3">
                            <h1 class="search_query_h1">Du har søkt på $result.getQuery()</h1>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="4">
                            <dl class="result_pic_header">
                                <dt>Viser $result.getPager().getFirstHitOnPage() - #if ($result.getTotalDocumentsAvailable() < $result.getPager().getLastHitOnPage()) $result.getTotalDocumentsAvailable() #else $result.getPager().getLastHitOnPage() #end av $result.getTotalDocumentsAvailable() på $result.getQuery()</dt>
                                <dd>#if ($result.getPager().getNumberOfPages() > 1)
                                        #if ( $result.getPager().getNumberOfPages() - $result.getPager().getCurrentPage() == 1 )
                                            #set( $mod = $result.getTotalDocumentsAvailable() % 12 )
                                            <a href="$baseURL&amp;offset=$result.getPager().getOffsetOfNextPage()"><b>$mod neste treff</b></a>
                                        #elseif (!$result.getPager().isLastPage())
                                            <a href="$baseURL&amp;offset=$result.getPager().getOffsetOfNextPage()"><b>12 neste treff</b></a>
                                        #end
                                    #end</dd>
                            </dl>
                        </td>
                    </tr>
                    #foreach ($item in $result.getResults())
                        #if ($velocityCount == 1 || $velocityCount == 5 || $velocityCount == 9)
                            <tr>
                        #end
                        <td class="pic_frame">
                            <table width="100%">
                                <tr>
                                    <td valign="middle" class="pic_box" height="145">
                                        <a href="$item.pageUrl"><img width="$item.thumbWidth" height="$item.thumbHeight" src="$item.thumbUrl" alt="" title="$item.imageTitle" /></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td valign="bottom" height="55" class="pic_text">
                                        <div class="pic_size">
                                            $item.width x $item.height piksler<br />
                                            $item.size kb<br />
                                            <a href="$item.pageUrl">kilde</a>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                         #if ($velocityCount == 4 || $velocityCount == 8)
                            </tr>
                        #end
                    #end
                    </tr>

                    <tr>
                        <td colspan="4">
                            <dl class="result_pic_header">
                                <dt>Viser $result.getPager().getFirstHitOnPage() - #if ($result.getTotalDocumentsAvailable() < $result.getPager().getLastHitOnPage()) $result.getTotalDocumentsAvailable() #else $result.getPager().getLastHitOnPage() #end av $result.getTotalDocumentsAvailable() på $result.getQuery()</dt>
                                <dd>#if ($result.getPager().getNumberOfPages() > 1)
                                        #if ( $result.getPager().getNumberOfPages() - $result.getPager().getCurrentPage() == 1 )
                                            #set( $mod = $result.getTotalDocumentsAvailable() % 12 )
                                            <a href="$baseURL&amp;offset=$result.getPager().getOffsetOfNextPage()"><b>$mod neste treff</b></a>
                                        #elseif (!$result.getPager().isLastPage())
                                            <a href="$baseURL&amp;offset=$result.getPager().getOffsetOfNextPage()"><b>12 neste treff</b></a>
                                        #end
                                    #end</dd>
                            </dl>
                        </td>
                    </tr>
                </table>

            #else
                #if ($result.getQuery()=="")
                    <table id="pic_result" cellspacing="10px" cellpadding="0">
                        <tr>
                            <td colspan="3">
                                <h1 class="search_query_h1">De mest populære bildesøkene:</h1>
                            </td>
                        </tr>
                        <tr>
                            <td class="pic_frame">
                                <table width="100%">
                                    <tr>
                                        <td valign="middle" class="pic_box" height="145">
                                            <a href="?c=p&amp;q=bali"><img width="128" height="93" src="../images/picture/ferie.jpg" alt="" /></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="bottom" height="45" class="pic_text">
                                            <div class="pic_size">
                                                Søk på feriesteder:<br />
                                                <a href="?c=p&amp;q=bali">Bali</a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td class="pic_frame">
                                <table width="100%">
                                    <tr>
                                        <td valign="middle" class="pic_box" height="145">
                                            <a href="?c=p&amp;q=angelina+jolie"><img width="94" height="128" src="../images/picture/personer.jpg" alt="" /></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="bottom" height="45" class="pic_text">
                                            <div class="pic_size">
                                                Søk på kjente personer:<br />
                                                <a href="$?c=p&amp;q=angelina+jolie">Angelina Jolie</a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td class="pic_frame">
                                <table width="100%">
                                    <tr>
                                        <td valign="middle" class="pic_box" height="145">
                                            <a href="?c=p&amp;q=psp"><img width="128" height="97" src="../images/picture/design.jpg" alt="" /></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="bottom" height="45" class="pic_text">
                                            <div class="pic_size">
                                                Søk på aktuell design:<br />
                                                <a href="?c=p&amp;q=psp">PSP</a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td class="pic_frame">
                                <table width="100%">
                                    <tr>
                                        <td valign="middle" class="pic_box" height="145">
                                            <a href="?c=p&amp;q=salvador+dali"><img width="90" height="128" src="../images/picture/kunst.jpg" alt="" /></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td valign="bottom" height="45" class="pic_text">
                                            <div class="pic_size">
                                                Søk på kunst:<br />
                                                <a href="?c=p&amp;q=salvador+dali">Salvador Dali</a>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                #else
                    <div id="no_hits">
                        #parse("no-hits.vm")
                    </div>
                #end
            #end

        </content>

        <content tag="more-results-p">
            #set ($tab = "p")
            #if ($result.getModifier())
                #set ($extra = "&amp;mod=$result.getModifier()")
            #end
            #parse("verbosePager.vm")
        </content>

    </body>
</html>